<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{formatDate post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.comments.length}}
  <section class="card">
    <div class="card-header">
      <h3>{{post.comments.length}} Comment{{#unless post.comments.length 'eq' 1}}s{{/unless}}</h3>
    </div>

    <div class="card-body">
      {{#each post.comments as |comment|}}
      {{> comments}}
      {{/each}}
    </div>
  </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input" required></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>

</div>

<script src="/js/comment.js"></script>
